<com.android.keyguard.AlphaOptimizedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/ticker"
    android:animationCache="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageSwitcher
        android:id="@+id/tickerIcon"
        android:visibility="gone"
        android:layout_width="@dimen/ticker_icon_size"
        android:layout_height="@dimen/ticker_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp"
        android:inAnimation="@anim/slide_in_bottom"
        android:outAnimation="@anim/slide_out_up">
        <com.android.systemui.statusbar.AnimatedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.android.systemui.statusbar.AnimatedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ImageSwitcher>

    <org.nameless.systemui.statusbar.ticker.MarqueeTickerView
        android:id="@+id/tickerText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:inAnimation="@anim/slide_in_bottom"
        android:outAnimation="@anim/slide_out_up"
        android:layout_weight="1.0">
        <org.nameless.systemui.statusbar.ticker.MarqueeTextView
            android:textAppearance="@style/TextAppearance.StatusBar.Clock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:textDirection="locale" />
        <org.nameless.systemui.statusbar.ticker.MarqueeTextView
            android:textAppearance="@style/TextAppearance.StatusBar.Clock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:textDirection="locale" />
    </org.nameless.systemui.statusbar.ticker.MarqueeTickerView>
</com.android.keyguard.AlphaOptimizedLinearLayout>
