<com.android.server.wm.PinnedWindowOverlayView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pinned_window_menu_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/pinned_window_menu_container"
        android:background="@drawable/pinned_window_menu_shape"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/pinned_window_menu_mute_button"
            android:background="@drawable/pinned_window_button_shape"
            android:layout_width="42dp"
            android:layout_height="42dp" />
        <View
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/menu_view_space"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <ImageButton
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/pinned_window_menu_scale_button"
            android:background="@drawable/pinned_window_button_shape"
            android:layout_width="42dp"
            android:layout_height="42dp" />
    </LinearLayout>
</com.android.server.wm.PinnedWindowOverlayView>
